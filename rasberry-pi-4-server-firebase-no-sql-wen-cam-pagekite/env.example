# üêü Fish Feeder IoT System - Environment Configuration
# =====================================================
# Copy this file to .env and configure your settings

# Arduino Configuration
# ---------------------
ARDUINO_PORT=COM3
# Windows: COM3, COM4, etc.
# Linux/Pi: /dev/ttyUSB0, /dev/ttyACM0, etc.

ARDUINO_BAUD=115200
# Standard baud rate for Arduino Mega 2560

ARDUINO_TIMEOUT=5
# Serial communication timeout in seconds

# Firebase Configuration
# ----------------------
FIREBASE_URL=https://fish-feeder-iot-default-rtdb.firebaseio.com/
# Your Firebase Realtime Database URL

FIREBASE_SERVICE_ACCOUNT=firebase-service-account.json
# Path to Firebase service account key file (optional)

# Web Server Configuration
# -----------------------
WEB_HOST=0.0.0.0
# 0.0.0.0 = Accept connections from any IP
# 127.0.0.1 = Local connections only

WEB_PORT=5000
# Port for Flask web server

WEB_DEBUG=False
# Set to True for development only

# Performance Configuration
# ------------------------
CACHE_DURATION=3
# Sensor data cache duration in seconds

MAX_RETRIES=2
# Maximum retry attempts for failed operations

# Logging Configuration
# --------------------
LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_TO_FILE=False
# Set to True to enable file logging

LOG_FILE_PATH=fish_feeder.log
# Log file path (if LOG_TO_FILE=True)

# Sensor Configuration
# -------------------
SENSOR_READ_INTERVAL=5
# Sensor reading interval in seconds

SENSOR_CACHE_TTL=3
# Sensor cache time-to-live in seconds

# Command Configuration
# --------------------
COMMAND_TIMEOUT=10
# Command execution timeout in seconds

COMMAND_RETRY_COUNT=2
# Number of command retry attempts 