rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read/write access to sensor data
    match /sensor_data/{document} {
      allow read, write: if true; // For development - restrict in production
    }
    
    // Allow read/write access to control commands
    match /control_commands/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to system status
    match /system_status/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to device config
    match /device_config/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to latest readings
    match /latest/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to errors
    match /errors/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to feed sessions
    match /feed_sessions/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to command responses
    match /command_responses/{document} {
      allow read, write: if true;
    }
    
    // Test collection
    match /_test/{document} {
      allow read, write: if true;
    }
  }
} 